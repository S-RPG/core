#include <iostream>
#include <string>
int main() 
{
void MenuInicial() {
    std::cout << "Bem vindo ao jogo de sobrevivencia, sobreviva o maximo que conseguir" << std::endl;
    std::cout << "1. Iniciar novo jogo" << std::endl;
    std::cout << "2. Sair do jogo" << std::endl;
}
void Historia() {
    std::cout << "Notícia transmitida para o país: Os conflitos entre os revolucionários contra o governo oligárquico se intensificaram nos últimos dias." << std::endl;
    std::cout << "O assessor do presidente veio a público esclarecer os ocorridos." << std::endl;
    std::cout << "Atualmente, o estado encontra-se em estado de alerta e foi declarada guerra aos revolucionários." << std::endl;
    std::cout << "É recomendado a permanência em suas residências." << std::endl;

}
int main() {
    int opcao;
    MenuInicial();
    std::cin >> opcao;
    switch (opcao) {
        case 1:
            std::cout << "Jogo inciado" << std::endl;
            break;
        case 2:
            std::cout << "Saindo do jogo" << std::endl;
            return 0;

    }
    Historia();
    return 0;
}
}