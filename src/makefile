CXX := g++
CXXFLAGS := -std=c++17

INCLUDE := include
SRC := src
BIN := bin
EXEC := main

${BIN}/${EXEC}:
	@echo "üèõÔ∏è Ô∏è Building ..."
	@mkdir -p ${BIN}/
